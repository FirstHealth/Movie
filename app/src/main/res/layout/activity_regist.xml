<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:id="@+id/iv"
        android:background="@android:color/black"
        android:src="@mipmap/back">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:background="@android:color/black"
        android:orientation="vertical">
        <EditText
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:background="@drawable/etback"
            android:layout_marginLeft="44dp"
            android:id="@+id/name"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:hint="请输入昵称">
        </EditText>
        <EditText
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:background="@drawable/etback"
            android:layout_marginLeft="44dp"
            android:id="@+id/email"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:hint="请输入邮箱">
        </EditText>
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_marginTop="10dp"
            android:layout_height="44dp">
            <EditText
                android:layout_width="362dp"
                android:layout_height="44dp"
                android:background="@drawable/etback"
                android:layout_marginLeft="44dp"
                android:id="@+id/pass"
                android:textColor="@android:color/darker_gray"
                android:hint="请输入账号密码"
                android:password="true"
                android:textColorHint="@android:color/darker_gray">
            </EditText>
            <ImageView
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp15"
                android:src="@mipmap/group"
                android:id="@+id/group"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp54"
                android:layout_alignRight="@id/pass">
            </ImageView>
            <ImageView
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp12"
                android:src="@mipmap/yanjing"
                android:layout_alignRight="@id/pass"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp30"
                android:id="@+id/yanjing">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_marginTop="10dp"
            android:layout_height="44dp">
            <EditText
                android:layout_width="362dp"
                android:layout_height="44dp"
                android:background="@drawable/etback"
                android:layout_marginLeft="44dp"
                android:id="@+id/yzm"
                android:textColor="@android:color/darker_gray"
                android:hint="请输入验证码"
                android:password="true"
                android:textColorHint="@android:color/darker_gray">
            </EditText>
            <Button
                android:layout_width="96dp"
                android:layout_height="44dp"
                android:text="获取验证码"
                android:id="@+id/get"
                android:background="@drawable/buttonback"
                android:textColor="@android:color/black"
                android:layout_alignRight="@id/yzm">
            </Button>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="18dp"
            android:layout_marginTop="13dp"
            android:background="@android:color/black">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/gologin"
                android:layout_height="16dp"
                android:text="已有账号 立即登录"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="242dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="@dimen/dp140"
            android:layout_marginTop="12dp"
            android:background="@android:color/black"
            android:orientation="vertical">
            <Button
                android:layout_width="312dp"
                android:layout_height="44dp"
                android:id="@+id/regist"
                android:background="@drawable/loginback"
                android:textColor="@android:color/white"
                android:layout_marginLeft="44dp"
                android:text="注册">
            </Button>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>